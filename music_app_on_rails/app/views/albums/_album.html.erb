<% action_url = album.persisted? ? album_url(album) : albums_url %>
<% method = album.persisted? ? "PATCH" : "POST" %>
<% button = album.persisted? ? "Edit Album" : "Submit Album" %>

<% band_name = Band.find_by_id(params[:band_id]).name %>

<form action=" <%= action_url %> " method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>

  <div>
    <div>
      <label for="album_band_name">Band:</label>
    </div>
    <div>
      <select name="album[band_id]" id="band_name">
        <% Band.all.each do |band| %>
          <option value=<%= band.id %> <%= "selected" if band.name == band_name %> >
            <%= band.name %>
          </option>
        <% end %>
      </select>
    </div>
  </div>

  <div>
    <div>
      Album Name:
    </div>
    <div>
      <input type="text" name="album[name]">
    </div>
  </div>

  <div>
    <label for="live">Live</label>
    <input id="live"
           type="radio"
           name="album[live]"
           value=true>

    <label for="studio">Studio</label>
    <input id="studio"
           type="radio"
           name="album[live]"
           value=false>
  </div>


  <input type="submit" value="<%= button %>" >
</form>
