<% unless logged_in? %>
  <h1>Sign-In</h1>

  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <div>
      <div>
        <label for="sign_in_email">E-Mail:</label>
        <input type="text"
               id="sign_in_email"
               name="user[email]">
      </div>
      <div>
        <label for="sign_in_password">Password:</label>
        <input type="password"
               id="sign_in_password"
               name="user[password]">
      </div>
    </div>

    <input type="submit" value="Submit">
  </form>
<% end %>
