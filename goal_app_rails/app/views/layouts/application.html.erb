<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  Signed in as: <%= current_user.username %>
  <%= link_to "Sign Out", session_url, method: :delete %>
<% end %>

<% flash[:errors] ||= [] %>
<% flash[:errors].each do |error| %>
  <%= error %>
<% end %>

<%= yield %>

</body>
</html>
