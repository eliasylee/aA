<h1><%= @cat.name %></h1>

<table>
  <tr>
    <td>Birthday:</td>
    <td><%= @cat.birth_date %></td>
  </tr>

  <tr>
    <td>Color:</td>
    <td><%= @cat.color %>
  </tr>

  <tr>
    <td>Sex:</td>
    <td><%= @cat.sex %>
  </tr>

  <tr>
    <td>Description:</td>
    <td><%= @cat.description %>
  </tr>

  <ul>
    <tr>
      <td>Rentals:</td>
      <td><%= link_to "Click Here!", new_cat_rental_request_url %> </td>
    </tr>
    <tr>
      <td>Start date:</td>
      <td>End date:</td>
    </tr>
    <% @cat.cat_rental_requests.each do |rental| %>
    <tr>
      <td><%= rental.start_date %></td>
      <td><%= rental.end_date %>  </td>
    </tr>
    <% end %>
  </ul>
</table>
