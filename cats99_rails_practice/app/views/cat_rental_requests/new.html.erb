<h1>So you want a cat</h1>

<form action=" <%= cat_rental_requests_url %> " method="post">

  Select by Name:
    <br>
    <select name="cat_rental_requests[cat_id]">
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>">
          <%= cat.name %>
        </option>
      <% end %>
    </select>
    <br>
    <br>

  Start Date:
    <br>
    <input type="date" name="cat_rental_requests[start_date]" value="<%= Date.today %>">
    <br>
    <br>

  End Date:
    <br>
    <input type="date" name="cat_rental_requests[end_date]" value="<%= Date.today + 1 %>">
    <br>
    <br>

  <input type="submit" value="Reserve kitty!">
</form>
